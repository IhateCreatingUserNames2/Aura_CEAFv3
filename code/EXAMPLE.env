# OpenRouter API Key (required for LLM functionality)
OPENROUTER_API_KEY=""



# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database URL (SQLite by default, use PostgreSQL for production)
DATABASE_URL=sqlite:///aura_agents.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/aura_db

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24



# A2A Wrapper Configuration (if using A2A)
A2A_WRAPPER_HOST=0.0.0.0
A2A_WRAPPER_PORT=8094
A2A_WRAPPER_BASE_URL=

# Memory Blossom Configuration
MEMORY_BLOSSOM_PERSISTENCE_PATH=memory_blossom_data.json

# Logging
LOG_LEVEL=INFO

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8000

# Optional: Redis for session storage in production
# REDIS_URL=redis://localhost:6379

# Optional: Email configuration for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password